{
    "vim.easymotion": true,
    "vim.surround": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.cursorStylePerMode.replace": "underline",
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [";"],
            "after": [":"]
        },
        {
            "before": [":"],
            "after": ["<Nop>"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["v"],
            "after": ["v", "l", "h"]
        },
        {
            "before": ["<space>"],
            "commands": [":nohl"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [";"],
            "after": [":"]
        },
        {
            "before": [":"],
            "after": ["<Nop>"]
        },
        {
            "before" : ["<"],
            "after" : ["<", "g", "v"]
        },
        {
            "before" : [">"],
            "after" : [">", "g", "v"]
        },
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$", "h"]
        }
    ],
    "vim.leader": "\\",
    "vim.gdefault": true,
    "vim.foldfix": true,
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-w>": false,
        "<C-k>": false,
        "<C-f>": false,
    },
    "vim.easymotionMarkerHeight": 16,
    "vim.easymotionMarkerWidthPerChar": 6,

    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
        "statusBar.background": "#851894",
        "statusBar.noFolderBackground": "#851894",
        "statusBar.debuggingBackground": "#851894"
    },
    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.iconTheme": "material-icon-theme",

    "window.enableMenuBarMnemonics": false,
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,

    "editor.formatOnType": true,
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.wordWrap": "on",

    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.gz",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav"
    ],

    "explorer.confirmDelete": false,

    "emmet.triggerExpansionOnTab": true,
    "emmet.showSuggestionsAsSnippets": true,

    "files.exclude": {
        "**/node_modules": true
    },

    "javascript.updateImportsOnFileMove.enabled": "always",

    "git.autofetch": true,
    "git.confirmSync": false,

    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",

    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": ["--max-line-length=1000"],

    "autoDocstring.docstringFormat": "sphinx",
}
